{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleDetection": "force",
    "module": "CommonJS",

    /* Bundler mode */
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node",
    /* Paths */
    "paths": {
      "#build/ui": ["./node_modules/.nuxt-ui/ui"]
    },
    "resolveJsonModule": true, 

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noEmit": true,  // 改为 false
    "isolatedModules": false,  // CommonJS 不需要 isolatedModules
    "skipLibCheck": true,
    "esModuleInterop": true,  // 启用 ES 模块互操作
    "allowSyntheticDefaultImports": true,  // 允许默认导入
    "forceConsistentCasingInFileNames": true,
    
    "outDir": ".out/electron",  // 注意：输出目录是 .out 
 
  },
  "include": ["electron/**/*.ts", "types/**/*.d.ts", "types/**/*.ts"]
}
